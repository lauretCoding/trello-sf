{% extends 'base.html.twig' %}

{% block content %}

    {% for categorie in categories %}
        <div class="col-md-3">
            {{ categorie.name }}

            {% for task in categorie.tasks %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ task.name }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}

